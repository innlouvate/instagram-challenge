<section class="photo">
  <p><%= @photo.name %></p>
  <%= image_tag @photo.image.url(:original) %>

  <section class='thumb'>
    <p><%= link_to image_tag('thumb.png'), photo_thumbs_path(@photo), class: 'thumbs-link' %>
    <span class='thumbs_count'><%= @photo.thumbs.count %></span> thumbs up

    <h3>Comments:</h3>
    <% if @photo.comments.any? %>
      <ul>
        <% @photo.comments.each do |comment| %>
          <li>
            <%= comment.description %>
          </li>
        <% end %>
      </ul>

    <% else %>
      No comments
    <% end %>

  </section>

</section>
